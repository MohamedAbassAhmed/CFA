@model List<CFA.Models.CreatePurchaseOrderViewModel>

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PurchaseOrder</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly"  class="text-danger"></div>
        <form asp-action="Create">
            @for (var i=0;i<Model.Count;i++)
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="@Model[i].FishTypeNo" class="control-label"></label>
                        <input asp-for="@Model[i].FishTypeName" class="form-control" disabled="true" value="@Model[i].FishTypeName"/>
                        <input type="hidden" asp-for="@Model[i].FishTypeNo" class="form-control"  value="@Model[i].FishTypeNo"/>
                    </div>@*asp-items="@(new SelectList(ViewBag.FishTypesList, "Id", "FishTypeName"))"*@
                    <div class="col-md-6">
                        <label asp-for="@Model[i].Quantity" class="control-label"></label><span class="text-danger">*</span>
                        <input asp-for="@Model[i].Quantity" class="form-control" value="0" />
                        <span asp-validation-for="@Model[i].Quantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    
                </div>

            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
